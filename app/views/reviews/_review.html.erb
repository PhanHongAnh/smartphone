<div class="card list-review-in-day"style="margin: 10px;border-radius: 5px;box-shadow: 2px 6px 12px 2px rgba(10,10,10,.1);" >
  <div class="card-image" >
    <figure class="image" >
      <img src="<%= review.banner%>" style="height: 200px;border-radius: 5px 5px 0 0;" alt="Placeholder image">
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="<%= review.user.avatar %>" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= link_to review.title, review %></p>
        <p class="subtitle is-6">@<%= review.user.name %></p>
        <% if review.products %>
        <ul>
          <% review.products.each do |x| %>
            <li class="title is-5" style="text-align: right;">品名：<%= x.name %></li>
          <% end %>
        </ul>
        <% end %>
        <hr>
        <div class="blog_post_meta">
          <ul>
            <li>
              <i class="fa fa-comment-o"></i>
              <%= review.comments.count %> コメント
            </li>
            <li>
              <% if logged_in? %>
                <% if can? :edit, review %>
                  <%= link_to "編集", edit_review_path(review) %>
                <% end %>
              <% end %>
            </li>
            <li>
              <% if logged_in? %>
                <% if can? :destroy, review %>
                  <%= link_to "削除", review, method: :delete,
                    data: {confirm: "削除しますか？"} %>
                <% end %>
              <% end %>
            </li>
          </ul>
        </div>
        <time class="is-6" datetime="2016-1-1"><%= review.created_at.strftime "%l:%M %p - %_m %b %Y" %></time>
      </div>
    </div>

    <div class="content">
      <%= review.content %>
    </div>
  </div>
</div>
