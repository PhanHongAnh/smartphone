<%= simple_form_for @review do |f| %>
  <div class="row">
   <h1>レビュー投稿</h1>
      <div class="col-12 col-lg-8">
           <div class="col-12 mb-3">
             <%= f.label :title, "タイトル" %>
             <%= f.text_field :title, class:"form-control" %>
           </div>
           
           <div class="col-12 mb-3">
             <%= f.label :banner, "バナー" %><br>
             <%= f.file_field :banner %>
           </div>
           <br> <br> 
           <div class="col-12 mb-3">
           <%= f.label :product_ids, "商品" %>
           <%= f.input :product_ids, as: :select, :collection => Product.order(:name) , label_method: :name, input_html: {multiple: true}, label: false %>
           </div>
           <br> 
           <div class="col-12 mb-3">
             <%= f.label :content, "内容" %>
             <%= f.text_area :content, rows: 15, class: "form-control" %>
           </div>
           
     </div>
     <hr>
  </div>
  <div class="row">
      <%= f.submit "完了", :class => "btn btn-outline-success", :style => "width: 100px; margin: 10px;" %>
  </div>
 <% end %>
