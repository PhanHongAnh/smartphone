<%= form_for(@product) do |f| %>
     <%= f.label :name, "品名" %>
     <%= f.text_field :name, class:"form-control" %>
   
     <%= f.label :category, "カテゴリー" %>
     <%= f.text_field :category, class: "form-control" %>
   
     <%= f.label :image, "写真" %><br>
     <%= f.file_field :image %>
   
     <%= f.label :maker_id, "メーカー" %>
     <%= f.select :maker_id, Maker.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
   <hr>
   <%= f.submit "完了", :class => "btn btn-outline-success" %>
<% end %>