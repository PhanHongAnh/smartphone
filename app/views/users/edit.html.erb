<% provide(:title, @user.name) %>
 <div class="container">
   <div class="row">
     <div class="col-12 col-lg-8">
       <%= form_for(@user) do |f| %>
       <div class="checkout_details_area mt-50 clearfix">
           <h1><%= @user.name %></h1>
           <div class="row">
             <div class="col-12 mb-3">
               <%= f.label :name, "ニックネーム" %>
               <%= f.text_field :name, class:"form-control",
                 placeholder: @user.name %>
             </div>
             <div class="col-12 mb-3">
               <%= f.label :password, "パスワード" %>
               <%= f.password_field :password, class: "form-control",
                 placeholder: "Password" %>
             </div>
             <div class="col-12 mb-3">
               <%= f.label :password_confirmation, "パスワード確認" %>
               <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
             </div>
             <div class="col-12 mb-3">
               <%= f.label :avatar, "写真" %><br>
               <%= f.file_field :avatar %>
             </div>
           </div>
            <%= f.submit "完了", :class => "btn btn-outline-success", :style => "width: 100px;" %>
       </div>
       <% end %>
     </div>
     <div class="col-12 col-lg-4">
       <div class="cart-summary">
         <% if @user.avatar.present? %>
           <%= cl_image_tag(@user.avatar) %>
         <% else %>
           <%= image_tag("no_avatar.jpg") %><br><br>
         <% end %>
         <br><br>
         <h2>ユーザー情報</h2>
         <ul class="summary-table">
           <li>
             <span>メールアドレス: </span>
             <span><%= @user.email %></span>
           </li>
           <li>
             <span>作成時: </span>
             <span><%= @user.created_at %></span>
           </li>
         </ul>
       </div>
     </div>
   </div>
 </div>

